<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="filepath">$${env:LOGS_BASE}</Property>
	</Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="[%p: %d{yyyy-MM-dd HH:mm:ss} %C:%L] %m%n" />
        </Console>
 
        <RollingFile name="RollingFile"
            fileName="${filepath}/logs/booklibrary-app.log"
            filePattern="${filepath}/logs/$${date:yyyy-MM}/booklibrary-app-%d{-dd-MMMM-yyyy}-%i.log.gz">
            <PatternLayout>
                <pattern>[%p: %d{yyyy-MM-dd HH:mm:ss} %C:%L] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- rollover on startup, daily and when the file reaches 
                    10 MegaBytes -->
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy
                    size="10 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>
 
    <Loggers>
        <!-- LOG everything at INFO level -->
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
        <Logger name="it.favo.antopao.booklibrary" level="debug"></Logger>
        <Logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="debug"></Logger>
<!--         <Logger name="it.favo.antopao.booklibrary.services.LoggingServiceImpl" level="debug"></Logger> -->
<!--         <Logger name="org.springframework.web.client.RestTemplate" level="debug"></Logger> -->
<!--         <Logger name="org.apache.http" level="debug"></Logger> -->
<!--         <Logger name="org.infinispan" level="error"></Logger> -->
    </Loggers>
 
</Configuration>